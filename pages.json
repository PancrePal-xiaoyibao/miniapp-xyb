{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "小胰宝",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/ai-chat/chat",
			"style": {
				"navigationBarTitleText": "AI智能对话",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/handbook/index",
			"style": {
				"navigationBarTitleText": "病友宝典",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/handbook/detail",
			"style": {
				"navigationBarTitleText": "详情"
			}
		},
		{
			"path": "pages/handbook/document/index",
			"style": {
				"navigationBarTitleText": "文档详情"
			}
		},
		{
			"path": "pages/webview/index",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "小胰宝",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#FFFFFF"
	},
	"tabBar": {
		"color": "#999999",
		"selectedColor": "#4CAF50",
		"backgroundColor": "#FFFFFF",
		"borderStyle": "black",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "static/images/home.png",
				"selectedIconPath": "static/images/home-active.png"
			},
			{
				"pagePath": "pages/ai-chat/chat",
				"text": "AI助手",
				"iconPath": "static/images/chat.png",
				"selectedIconPath": "static/images/chat-active.png"
			},
			{
				"pagePath": "pages/handbook/index",
				"text": "病友宝典",
				"iconPath": "static/images/handbook.png",
				"selectedIconPath": "static/images/handbook-active.png"
			}
		]
	}
}
